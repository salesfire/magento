<?xml version="1.0"?>
<config>
    <modules>
        <Salesfire_Salesfire>
            <version>1.1.2</version>
        </Salesfire_Salesfire>
    </modules>

    <global>
        <models>
            <salesfire>
                <class>Salesfire_Salesfire_Model</class>
            </salesfire>
        </models>
        <blocks>
            <salesfire>
                <class>Salesfire_Salesfire_Block</class>
            </salesfire>
        </blocks>
        <helpers>
            <salesfire>
                <class>Salesfire_Salesfire_Helper</class>
            </salesfire>
        </helpers>
    </global>
    <frontend>
        <layout>
            <updates>
                <salesfire>
                    <file>salesfire.xml</file>
                </salesfire>
            </updates>
        </layout>
        <events>
            <controller_action_predispatch>
                <observers>
                    <salesfire>
                        <class>salesfire/observer</class>
                        <method>controllerFrontInitBefore</method>
                    </salesfire>
                </observers>
            </controller_action_predispatch>
            <controller_action_predispatch_catalog_product_view>
                <observers>
                    <salesfire>
                        <class>salesfire/observer</class>
                        <method>setProduct</method>
                    </salesfire>
                </observers>
            </controller_action_predispatch_catalog_product_view>
            <checkout_onepage_controller_success_action>
                <observers>
                    <salesfire>
                        <class>salesfire/observer</class>
                        <method>setOrder</method>
                    </salesfire>
                </observers>
            </checkout_onepage_controller_success_action>
            <checkout_multishipping_controller_success_action>
                <observers>
                    <salesfire>
                        <class>salesfire/observer</class>
                        <method>setOrder</method>
                    </salesfire>
                </observers>
            </checkout_multishipping_controller_success_action>
        </events>
    </frontend>
    <default>
        <salesfire>
            <general>
                <is_enabled>0</is_enabled>
                <site_id></site_id>
            </general>
        </salesfire>
    </default>
</config>
